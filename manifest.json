{
  "manifest_version": 2,
 
  "name": "!Bang Quick Search",
  "description": "DuckDuckGo like !bang quick search",
  "version": "1.1",
  "author": "Brian Dawson",
 
  "permissions": [
    "*://*.google.com/*",
    "*://*.bing.com/*",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
 
  "background": {
    "scripts": ["js/bang.js"],
    "persistent": true
  },
 
  "icons": {
    "16":"images/bang.png",
    "48":"images/bang.png",
    "128":"images/bang.png"
  }
}